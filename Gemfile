source 'https://rubygems.org'

# rails
gem 'rails', '3.2.3'

# db
gem 'pg'

# application gems
gem 'devise', '2.0.4'

# front end helpers
gem 'jquery-rails'
gem 'haml-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'twitter-bootstrap-rails'
end

# tests
group :test, :development do
  gem 'minitest'
  gem 'capybara'
  gem "turn", "~> 0.9.4"
end

group :development do
  gem 'thin'
end
